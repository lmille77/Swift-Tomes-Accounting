@model IEnumerable<Swift_Tomes_Accounting.Models.ViewModels.AccountDB>
@{
    ViewData["Title"] = "ChartOfAccounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">

        <li>
            <a asp-controller="Manager" asp-action="ChartOfAccounts" class="btn btn-dark btn-outline-info">Chart of Accounts</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Report" class="btn btn-dark btn-outline-info">Reports</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Journalize" class="btn btn-info btn-outline-light">Journalize</a>
        </li>

    </ul>
</div>
<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/extensions/filter-control/utils.min.js"></script>

<h1 class="text-center" style="margin-left:10px">Journalize</h1>
<br/>
<br/>
<div class="form-group row">
    <div style="margin-left:450px">
        <a asp-controller="Money" asp-action="CreateAccount" class="btn btn-dark btn-outline-info text-white"
           data-toggle="tooltip" data-placement="bottom" title="Add a New Account to the System">
            Add Account
        </a>
        <a asp-controller="Money" asp-action="CreateAccount" class="btn btn-dark btn-outline-danger text-white"
           data-toggle="tooltip" data-placement="bottom" title="Close an account to the System">
            Close Accounts
        </a>

    </div>
    <br/>
    <br/>
    <div>

        <form asp-controller="Money" asp-action="ChartOfAccounts" method="post" style="margin-left:100px">
            <div>&nbsp;&nbsp;</div>
            <div>&nbsp;&nbsp;</div>
            <p>
                <label>$</label>
                <input type="text" name="BalanceSearch1" value="@ViewBag.result" />
                <label> - $</label>
                <input type="text" name="BalanceSearch2" value="@ViewBag.result" />
                &nbsp;&nbsp;
                <input type="date" name="DateSearch1" value="@ViewBag.result" />
                <label> - </label>
                <input type="date" name="DateSearch2" value="@ViewBag.result" />
                &nbsp;&nbsp;
                
                <input type="submit" value="Filter" data-toggle="tooltip" data-placement="bottom" title="Filter the Chart of Accounts Data
                       with a Date Range or Balance Search" />
            </p>
        </form>
    </div>
    <div>&nbsp;&nbsp;</div>
    <div>
        <div>&nbsp;&nbsp;</div>
        <form asp-controller="Money" asp-action="ChartOfAccounts" method="get">
            <div>&nbsp;&nbsp;</div>
            <p>
                <input type="submit" value="Reset" data-toggle="tooltip" data-placement="bottom" title="Reset the Filtered Data">
            </p>

        </form>
    </div>

</div>





<div class="container-fluid" style="width: 1250px; margin-left: 75px">
    <table class="table" id="table"
           data-toggle="table"
           data-search="true"
           data-filter-control="true">
        <thead>
            <tr>
                <th data-field="createdOn" data-sortable="true">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th data-field="accountName" data-sortable="true">
                    Type
                </th>
                <th data-field="userName" data-sortable="true">
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                
                <th data-field="subCategory" data-sortable="true">
                    Accounts
                </th>
                <th data-field="balance" data-sortable="true">
                    @Html.DisplayNameFor(model => model.Debit)
                </th>
                <th data-field="createdOn" data-sortable="true">
                    @Html.DisplayNameFor(model => model.Credit)
                </th>



            </tr>
        </thead>
       
    </table>
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>