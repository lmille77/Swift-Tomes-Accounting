@model Swift_Tomes_Accounting.Models.ViewModels.AccountLedger

@{
    double current_balance = Model.account.Initial;
}

<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/extensions/filter-control/utils.min.js"></script>


<h2 class="text-center">@Model.account.AccountName</h2>

<br />
<div class="text-center">
    <a onclick="history.go(-1);" class="btn btn-success w-10 text-white">Go Back</a>
</div>
<br />
<div class="form-group row w-75 justify-content-start" style="position:absolute;top:175px;padding-left:20px">

    <form asp-controller="Manager" asp-action="AccountLedger" method="post">
        <input style="width:150px" name="DateSearch1" value="@ViewBag.result" placeholder="Begin Date:" onfocus="(this.type='date')" onblur="(this.type='text')" />
        <label> - </label>
        <input style="width:150px" name="DateSearch2" value="@ViewBag.result" placeholder="End Date:" onfocus="(this.type='date')" onblur="(this.type='text')" />
        <input type="hidden" name="LedgerID" value="@Model.account.AccountNumber" />
        <input type="submit" value="Filter" data-toggle="tooltip" data-placement="bottom" title="Filter the Chart of Accounts Data with a Date Range or Balance Search" />

    </form>
    <div>&nbsp;</div>
    <form asp-controller="Manager" asp-action="AccountLedger" method="get">
        <input type="submit" value="Reset" data-toggle="tooltip" data-placement="bottom" title="Reset the Filtered Data">

    </form>

</div>
<div class="p-4 border w-100">

    <table class="table table-striped border" id="table"
           data-toggle="table"
           data-search="true"
           data-filter-control="true">
        <thead class="table-dark">
            <tr>
                <th>
                    Entry Date
                </th>
                <th>
                    Post Reference
                </th>
                <th>
                    Initial Balance
                </th>
                <th>
                    Debit
                </th>
                <th>
                    Credit
                </th>
                <th>
                    Total Balance
                </th>
            </tr>
        </thead>
        <tr>
            <td>
                @Model.account.CreatedOn
            </td>
            <td>
            </td>
            <td>
                @Model.account.Initial
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                @current_balance
            </td>
        </tr>
        @foreach (var item in Model.journal_accounts)
        {
            @if (item.AccountName1 == Model.account.AccountName && item.IsRejected == false)
            {
                current_balance += item.Debit;
                <tr>
                    <td>
                        @item.CreatedOn
                    </td>
                    <td>
                        @Html.ActionLink(@item.JournalId.ToString(), "PostRef", "Manager", new { id = item.JournalId }, null)
                    </td>
                    <td>
                    </td>
                    <td>
                        @item.Debit
                    </td>
                    <td>
                    </td>
                    <td>
                        @current_balance
                    </td>
                </tr>
            }
            @if (item.AccountName2 == Model.account.AccountName && item.IsRejected == false)
            {
                current_balance -= item.Credit;
                <tr>
                    <td>
                        @item.CreatedOn
                    </td>
                    <td>
                        @Html.ActionLink(@item.JournalId.ToString(), "PostRef", "Manager", new { id = item.JournalId }, null)
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                    <td>
                        @item.Credit
                    </td>
                    <td>
                        @current_balance
                    </td>
                </tr>
            }

        }
        <tr>
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                @Model.account.Balance
            </td>
        </tr>


    </table>
</div>



<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">

        <li>
            <a asp-controller="Manager" asp-action="ChartOfAccounts" class="btn btn-info btn-outline-light">Chart of Accounts</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Report" class="btn btn-dark btn-outline-info">Reports</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="JournalIndex" class="btn btn-dark btn-outline-info">Journalize</a>
        </li>
    </ul>
</div>



