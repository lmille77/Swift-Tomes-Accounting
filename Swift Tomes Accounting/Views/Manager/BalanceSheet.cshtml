@model Swift_Tomes_Accounting.Models.ViewModels.BalanceSheet
@{ 
    var net = Model.TotalLi + Model.TotalEQ;
}

<div class="p-4 border w-100">
    <div class="text-center p-1 border w-125">
        <h2>Addams & Family Inc</h2>
        <h2>Balance Sheet</h2>
        <h2>As of @DateTime.Now.ToString("MMMM dd, yyyy")</h2>
    </div>
    <br />
    <br />


    <div>
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>
                        Assets
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Accounts)
                {

                    <tr>

                        @if (item.Category == "Asset")
                        {
                            <td>
                                <text> &nbsp; &nbsp;</text> @item.AccountName
                            </td>
                            <td style="text-align:right">
                                @if (item.Contra)
                                {
                                    <label>(</label>
                                    @item.Balance.ToString("C") 
                                    <label>)</label>
                                }
                                else
                                {
                                    @item.Balance.ToString("C")
                                }
                            </td>
                        }
                    </tr>
                }
                <tr class="table-secondary">
                    <td class="font-weight-bold">
                        Total Assets
                    </td>
                    <td style="text-align:right">
                        @Model.TotalAs.ToString("C")
                    </td>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
                <tr>

                    <th class="font-weight-bold">
                        Liabilities
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.Accounts)
                {
                    <tr>

                        @if (item.Category == "Liability")
                        {
                            <td>
                                <text> &nbsp; &nbsp;</text> @item.AccountName
                            </td>
                            <td style="text-align:right ">
                                @if (item.Contra)
                                {
                                    @item.Balance.ToString("(" + "C" + ")")
                                }
                                else
                                {
                                    @item.Balance.ToString("C")
                                }
                            </td>
                        }
                    </tr>

                }

                <tr class="table-secondary">
                     <td class="font-weight-bold">
                        Total Liabilities
                     </td>
                    <td style="text-align:right">
                        @Model.TotalLi.ToString("C")
                    </td>
                </tr>

                <tr>

                    <th class="font-weight-bold">
                        Equity
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.Accounts)
                {
                    <tr>

                        @if (item.Category == "Equity")
                        {
                            <td>
                                <text> &nbsp; &nbsp;</text> @item.AccountName
                            </td>
                            <td style="text-align:right; ">
                               @if (item.Contra)
                               {
                                    @item.Balance.ToString("("+"C"+")")
                               }
                               else
                               {
                                    @item.Balance.ToString("C")
                               }
                            </td>
                        }
                    </tr>

                }
                <tr>
                    <td>
                        <text> &nbsp; &nbsp;</text> Retained Earnings
                    </td>
                    <td style="text-align:right">
                        @Model.EndRE.ToString("C")
                    </td>
                </tr>
                
                <tr class="table-secondary">
                    <td class="font-weight-bold">
                        Total Equity
                    </td>
                    <td style="text-align:right">
                        @Model.TotalEQ.ToString("C")
                    </td>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
                <tr class="table-secondary">
                    <td class="font-weight-bold">
                        Net Income (Loss)
                    </td>
                    <td style="text-align:right; text-decoration-line:underline; text-decoration-style:double">
                        @net.ToString("C")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">

        <li>
            <a asp-controller="Manager" asp-action="ChartOfAccounts" class="btn btn-dark btn-outline-info">Chart of Accounts</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Send" class="btn btn-dark btn-outline-info">Send Message</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Report" class="btn btn-info btn-outline-light">Reports</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="JournalIndex" class="btn btn-dark btn-outline-info">Journalize</a>
        </li>
    </ul>
</div>
