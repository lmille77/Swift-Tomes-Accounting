@model IEnumerable<Swift_Tomes_Accounting.Models.ViewModels.AccountDB>
@{
    ViewData["Title"] = "ChartOfAccounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/extensions/filter-control/utils.min.js"></script>


<br />
<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center border-info">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">

        <li>
            <a asp-controller="Manager" asp-action="ChartOfAccounts" class="btn btn-info btn-outline-light">Chart of Accounts</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Report" class="btn btn-dark btn-outline-info">Reports</a>
        </li>
        <li>
            <a asp-controller="Manager" asp-action="Journalize" class="btn btn-dark btn-outline-info">Journalize</a>
        </li>
    </ul>
</div>


<div class="text-center" style="margin-left:50px">
    <h1>Chart Of Accounts</h1>


    <div class="form-group row">

        <form asp-controller="Manager" asp-action="ChartOfAccounts" method="post" style="margin-left:525px">
            <p>
                <label>$</label>
                <input type="text" name="BalanceSearch1" value="@ViewBag.result" />
                <label> - $</label>
                <input type="text" name="BalanceSearch2" value="@ViewBag.result" />
                &nbsp;&nbsp;
                <input type="date" name="DateSearch1" value="@ViewBag.result" />
                <label> - </label>
                <input type="date" name="DateSearch2" value="@ViewBag.result" />
                &nbsp;&nbsp;
                <input type="submit" value="Filter" data-placement="bottom" title="Filter the Chart of Accounts Data
                       with a Date Range or Balance Search"/>
            </p>
        </form>
        &nbsp;&nbsp;
        <form asp-controller="Manager" asp-action="ChartOfAccounts" method="get">
            <p>
                <input type="submit" value="Reset" data-toggle="tooltip" data-placement="bottom" title="Reset the Filtered Data">
            </p>
        </form>
    </div>

</div>

<div class="container-fluid" style="width: 1200px; margin-left: 75px">
    <table class="table"  id="table"
           data-toggle="table"
           data-search="true"
           data-filter-control="true">
        <thead>
            <tr>
                <th data-field="accountNumber"  data-sortable="true">
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </th>
                <th data-field="accountName"  data-sortable="true">
                    @Html.DisplayNameFor(model => model.AccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th data-field="category"  data-sortable="true">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th data-field="subCategory"  data-sortable="true">
                    @Html.DisplayNameFor(model => model.SubCategory)
                </th>


                <th data-field="balance"  data-sortable="true">
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th data-field="createdOn"  data-sortable="true">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th data-field="userName"  data-sortable="true" >
                    @Html.DisplayNameFor(model => model.UserName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">
                    No Records match search criteria
                </td>
            </tr>
        }
        else
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-search"">
                            @Html.ActionLink(Convert.ToString(item.AccountNumber), "AccountLedger", "Manager", new { id = item.AccountNumber }, null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategory)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>

                    </tr>
                }
            </tbody>
        }

    </table>
</div>

