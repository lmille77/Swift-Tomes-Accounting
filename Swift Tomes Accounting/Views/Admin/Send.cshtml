@model Swift_Tomes_Accounting.Models.ViewModels.Message
<br />
<h2 class="text-center">Message User</h2>
<br />
<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">
        <li>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-dark btn-outline-info">Dashboard</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="Send" class="btn btn-info btn-outline-light">Send Message </a>
        </li>
        <li>
            <a asp-controller="UnapprovedUsers" asp-action="Index" class="btn btn-dark btn-outline-info">Pending Approval</a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Index" class="btn btn-dark btn-outline-info">User Management</a>
        </li>
        <li>
            <a asp-controller="Money" asp-action="Accounts" class="btn btn-dark btn-outline-info">Account List</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="EventLog" class="btn btn-dark btn-outline-info">Event Log</a>
        </li>
    </ul>
</div>

<div id="centerform">

    <form id="message" method="post" enctype="multipart/form-data" asp-action="Send" asp-controller="Admin">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ToEmail">To: </label>
            <div>
                <select asp-for="ToEmail" asp-items="@ViewBag.Users" class="form-control">
                    <option disabled selected>--Select User Email--</option>
                </select>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Subject">Subject:</label>
            <div>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Body">Body:</label>
            <div>
                <textarea asp-for="Body" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label>Attachments: </label>
            <div>
                <input type="file" name="attachments" multiple="multiple" />
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Send" class=" btn btn-primary" />
            </div>
        </div>

    </form>

</div>

