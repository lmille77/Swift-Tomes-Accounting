@model Swift_Tomes_Accounting.Models.ViewModels.EventModel
<head>
    <link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/extensions/filter-control/utils.min.js"></script>
</head>
<h3 class="text-center">Event Log</h3>

<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">

        <li>
            <a asp-controller="Accountant" asp-action="Index" class="btn btn-dark btn-outline-info">Dashboard</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="ChartOfAccounts" class="btn btn-dark btn-outline-info">Chart of Accounts</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="Send" class="btn btn-dark btn-outline-info">Send Message </a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="JournalIndex" class="btn btn-dark btn-outline-info">Journalize</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="IncomeStatement" class="btn btn-dark btn-outline-info">Income Statement</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="TrialBalance" class="btn btn-dark btn-outline-info">Trial Balance</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="BalanceSheet" class="btn btn-dark btn-outline-info">Balance Sheet</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="RetainedEarnings" class="btn btn-dark btn-outline-info">Retained Earnings</a>
        </li>
        <li>
            <a asp-controller="Accountant" asp-action="EventLog" class="btn btn-info btn-outline-light">Event Log</a>
        </li>
    </ul>
</div>

@{
    List<DateTime> eventTime = new List<DateTime>();
    foreach (var item in Model.EventAccount)
    {
        eventTime.Add(item.eventTime);
    }
    foreach (var item in Model.EventJournal)
    {
        eventTime.Add(item.eventTime);
    }
    //Add both list datetimes to this list then sort
    eventTime.Sort((x, y) => DateTime.Compare(y, x));
}

<div class="w-100">
    <table class="table table-striped" id="table"
           data-toggle="table"
           data-search="true"
           data-filter-control="true">

        <thead class="thead-dark">
            <tr>
                <th>
                    Event ID
                </th>
                <th>
                    Event Type
                </th>
                <th>
                    Field
                </th>
                <th>
                    Before
                </th>
                <th>
                    After
                </th>
                <th>
                    Performed By
                </th>
                <th>
                    Date of Event
                </th>
            </tr>
        </thead>

        @foreach (var time in eventTime)
        {
            foreach (var account in Model.EventAccount)
            {
                @if (time == account.eventTime)
                {
                    <tr>
                        <td style="width:100px">
                            Account-@account.eventID.ToString("000")
                        </td>
                        <td>
                            @account.eventType
                        </td>
                        <td style="width:200px">
                            Account Number:<br />
                            Account Name:<br />
                            Description:<br />
                            Category:<br />
                            Subcategory:<br />
                            Balance:<br />
                            Comments:<br />
                            Is Active?<br />
                            Is Contra?<br />
                        </td>
                        <td>
                            @if (account.BeforeAccountNumber == -1)
                            {
                                <div>None</div>
                            }
                            else
                            {
                                @account.BeforeAccountNumber<br />
                            }

                            @account.BeforeAccountName<br />
                            @account.BeforeDescription<br />
                            @account.BeforeCategory<br />
                            @account.BeforeSubCategory<br />
                            @if (account.BeforeBalance == -1)
                            {
                                <div>None</div>
                            }
                            else
                            {
                                @account.BeforeBalance<br />
                            }
                            @account.BeforeComments<br />
                            @if (account.BeforeisActive == false)
                            {
                                <div>Not Active</div>
                            }
                            else
                            {
                                <div>Active</div>
                            }
                            @account.BeforeisContra<br />
                        </td>
                        <td>
                            @account.AfterAccountNumber<br />
                            @account.AfterAccountName<br />
                            @account.AfterDescription<br />
                            @account.AfterCategory<br />
                            @account.AfterSubCategory<br />
                            @account.AfterBalance<br />
                            @account.AfterComments<br />
                            @if (account.AfterisActive == false)
                            {
                                <div>Not Active</div>
                            }
                            else
                            {
                                <div>Active</div>
                            }
                            @account.AfterisContra<br />
                        </td>
                        <td>
                            @account.eventPerformedBy
                        </td>
                        <td>
                            @account.eventTime
                        </td>

                    </tr>
                }

            }
            foreach (var journal in Model.EventJournal)
            {
                @if (time == journal.eventTime)
                {
                    <tr>
                        <td style="width:100px">
                            Journal-@journal.eventID.ToString("000")
                        </td>
                        <td>
                            @journal.eventType
                        </td>
                        <td style="width:100px; vertical-align:top">
                            Accounts:
                            @foreach (var item in journal.journal_accounts)
                            {
                                if (item.AccountName1 != null)
                                {
                                    <text><br /></text>
                                }
                                if (item.AccountName2 != null)
                                {
                                    <text><br /></text>
                                }
                            }
                            Debits:
                            @foreach (var item in journal.journal_accounts)
                            {
                                if (item.AccountName1 != null)
                                {
                                    <text><br /></text>
                                }

                            }
                            Credits:
                            @foreach (var item in journal.journal_accounts)
                            {
                                if (item.AccountName2 != null)
                                {
                                    <text><br /></text>
                                }

                            }
                            Post Ref:<br />
                            Type:<br />
                            Status: <br />
                            Description:<br />


                        </td>
                        <td style="width:150px;vertical-align:top">
                            @if (journal.isApproved == false && journal.isDenied == false)
                            {
                                <text>
                                    None
                                    @foreach (var item in journal.journal_accounts)
                                    {
                                        if (item.AccountName1 != null)
                                        {
                                            <text><br /></text>
                            }
                            if (item.AccountName2 != null)
                            {
                                <text><br /></text>
                            }
                        }
                                    None
                                    @foreach (var item in journal.journal_accounts)
                                    {
                                        if (item.AccountName1 != null)
                                        {
                                            <text><br /></text>
                                        }

                                    }
                                    None @foreach (var item in journal.journal_accounts)
                                    {
                                        if (item.AccountName2 != null)
                                        {
                                            <text><br /></text>
                                        }

                                    }
                                    None<br />
                                    None<br />
                                    None<br />
                                    None<br />
                                    </text>
                                }
                                else
                                {
                                    <text>
                                        @foreach (var item in journal.journal_accounts)
                                        {
                                            @if (item.AccountName1 != null)
                                            {
                                                @item.AccountName1<br />
                                            }

                                        }
                                        @foreach (var item in journal.journal_accounts)
                                        {
                                            <text>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>
                                    @if (item.AccountName2 != null)
                                    {
                                        @item.AccountName2<br />
                                    }

                                }
                                        @foreach (var item in journal.journal_accounts)
                                        {
                                            if (item.AccountName1 != null)
                                            {
                                                @item.Debit<br />
                                            }

                                        }
                                        @foreach (var item in journal.journal_accounts)
                                        {
                                            if (item.AccountName2 != null)
                                            {
                                                <text>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>
                                                @item.Credit<br />
                                            }

                                        }
                                        @journal.journalId<br />
                                        @journal.journal.Type<br />
                                        Pending<br />
                                        @if (journal.journal.Description == null)
                                        {
                                            <text>n/a</text>
                                        }
                                        else
                                        {
                                            @journal.journal.Description
                                        }
                                        </text>
                                    }

                        </td>
                        <td style="width:250px; vertical-align:top">
                            @foreach (var item in journal.journal_accounts)
                            {
                                @if (item.AccountName1 != null)
                                {
                                    @item.AccountName1<br />
                                }

                            }
                            @foreach (var item in journal.journal_accounts)
                            {
                                <text>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>
                                @if (item.AccountName2 != null)
                                {
                                    @item.AccountName2<br />
                                }

                            }
                            @foreach (var item in journal.journal_accounts)
                            {
                                if (item.AccountName1 != null)
                                {
                                    @item.Debit<br />
                                }

                            }
                            @foreach (var item in journal.journal_accounts)
                            {
                                if (item.AccountName2 != null)
                                {
                                    <text>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>
                                    @item.Credit<br />
                                }

                            }
                            @journal.journalId<br />

                            @journal.journal.Type<br />
                            @if (journal.isApproved == false && journal.isDenied == false)
                            {
                                <text>
                                    Pending
                                </text>
                            }
                            @if (journal.isApproved == false && journal.isDenied == true)
                            {
                                <text>
                                    Denied
                                </text>
                            }
                            @if (journal.isApproved == true && journal.isDenied == false)
                            {
                                <text>
                                    Approved
                                </text>
                            }
                            <br />
                            @if (journal.journal.Description == null)
                            {
                                <text>n/a</text>
                            }
                            else
                            {
                                @journal.journal.Description
                            }
                        </td>
                        <td style="width:150px">
                            @journal.eventPerformedBy
                        </td>
                        <td>
                            @journal.eventTime
                        </td>

                    </tr>

                }
            }
        }

    </table>
</div>