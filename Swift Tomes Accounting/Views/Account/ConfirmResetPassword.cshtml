@model Swift_Tomes_Accounting.Models.ViewModels.PasswdReset
<br />
<h3 class="text-center">Password Reset</h3>

<div style="width: 300px; margin: 0 auto;">
    <section id="Confirmrstpwform">
        <form id="Confirmrstpw" method="post" asp-action="ConfirmResetPassword" asp-controller="Account">
            <hr />
            <input asp-for="@Model.Id" hidden />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Code" hidden />
            <div class="form-group">
                <div class="col-xs-2">
                    <input asp-for="@Model.Email" hidden class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="text-center"asp-for="NewPass">New Password:</label>
                <div class="col-xs-2">
                    <input asp-for="NewPass" class="form-control" />
                    <span asp-validation-for="NewPass" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="text-center" asp-for="ConfirmPass">Confirm New Password:</label>
                <div class="col-xs-2">
                    <input asp-for="ConfirmPass" class="form-control" />
                    <span asp-validation-for="ConfirmPass" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class=" col-md-10 offset-md-2">
                    <input type="submit" value="Reset Password" class=" btn btn-success" />
                </div>
            </div>

            <div class="text-danger">
                <p>@ViewBag.ErrorMessage</p>
            </div>

        </form>
    </section>
</div>
   

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
