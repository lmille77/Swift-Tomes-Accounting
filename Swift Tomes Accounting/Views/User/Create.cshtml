@model Swift_Tomes_Accounting.Models.ViewModels.RegisterViewModel
<br />

<div style="border: 1px solid; border-color: lightgray; width: 495px; margin: 0 auto;">
    <br />
    <div class="text-center">
        <img src="~/frontend/STLogo.png" alt=”Image” style="width:50px; height:50px">
    </div>
    <br />
    <h4 class="text-center">Create a User</h4>
    <br />
    <form method="post" asp-action="Create" asp-controller="User">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-xs-2">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>&nbsp;</div>
            <div class="col-xs-2">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-md-8">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-md-6">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-md-6">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <select class="col-md-6 form-control" asp-for="Role">
                <option disabled selected>--Select Role--</option>
                <option>Admin</option>
                <option>Manager</option>
                <option>Accountant</option>
            </select>
        </div>
        <br />
        <div class="form-group row" style="margin-left:25px">
            <div class=" col-md-10 offset-md-2">
                <input type="submit" value="Create User" class=" btn btn-success" />
                &nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-warning" style="width:auto">Back to User List</a>
            </div>

        </div>
        <br />
        <br />

    </form>
</div>
<br />




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
