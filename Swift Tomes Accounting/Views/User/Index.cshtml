@model IEnumerable<Swift_Tomes_Accounting.Models.ViewModels.ApplicationUser>

<br />
<div>
    <div class="col-6">
        <h2 class="text-primary">User List</h2>

    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">

                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.FirstName  @item.LastName
                    </td>
                    <td>
                        @item.Role
                    </td>

                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-userId="@item.Id">
                                
                                <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                    Edit
                                </a>
                                @if (item.isApproved == true && item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                {
                                    //We want to show them the option to lock
                                    <button asp-action="LockUnlock" asp-route-userId="@item.Id" class="btn btn-success text-white"
                                            style="cursor:pointer">
                                        <span>
                                            <i class="fa fa-lock" aria-hidden="true"></i>
                                            Lock
                                        </span>
                                    </button>
                                }
                                else if (item.isApproved == true)
                                {
                                    //We want to show them the option to unlock
                                    <button asp-action="LockUnlock" asp-route-userId="@item.Id" class="btn btn-warning text-white"
                                            style="cursor:pointer">
                                        <span>
                                            <i class="fa fa-unlock" aria-hidden="true"></i>
                                            Unlock
                                        </span>
                                    </button>
                                }
                                @if (item.isApproved == false)
                                {

                                    //We want to show them the option to lock
                                    <button onclick="return confirm('Are you sure you want to reject this user?')"
                                            class="btn btn-danger">
                                        <i class="fa fa-times" aria-hidden="true"></i>

                                        Deny
                                    </button>
                                    <button asp-action="Approve" asp-route-userId="@item.Id" class="btn btn-success text-white"
                                            style="cursor:pointer">
                                        <span>
                                            <i class="fa fa-check" aria-hidden="true"></i>
                                            Approve
                                        </span>
                                    </button>


                                    }



                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }

</div>
<br />
<br />
<br />
<form asp-action="GoBack" asp-controller="Admin">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <button type="submit" class="btn btn-warning">Done</button>
            </div>
        </div>
    </div>
</form>

