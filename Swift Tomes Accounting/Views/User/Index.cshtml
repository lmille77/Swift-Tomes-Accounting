@model IEnumerable<Swift_Tomes_Accounting.Models.ViewModels.ApplicationUser>

<br />
<h2 class="text-center" style="margin-left:50px">User List</h2>

<div class="sidebar-container border-dark">
    <div>
        <br />
        <div class="text-center border-info">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">
        <li>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-dark btn-outline-info">Dashboard</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="Send" class="btn btn-dark btn-outline-info">Send Message </a>
        </li>
        <li>
            <a asp-controller="UnapprovedUsers" asp-action="Index" class="btn btn-dark btn-outline-info">Pending Approval</a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Index" class="btn btn-info btn-outline-light">Users List</a>
        </li>
        <li>
            <a a asp-controller="Roles" asp-action="Index" class="btn btn-dark btn-outline-info">Roles List</a>
        </li>
        <li>
            <a asp-controller="expiredpass" asp-action="Index" class="btn btn-dark btn-outline-info">Expired Passwords List</a>
        </li>
        <li>
            <a asp-controller="Money" asp-action="ChartOfAccounts" class="btn btn-dark btn-outline-info">Chart of Accounts</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="EventLog" class="btn btn-dark btn-outline-info">Event Log</a>
        </li>
    </ul>
</div>
<div class="p-4 border rounded" style="width: 900px; margin-left:175px;">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">

                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                @if (item.isApproved)
                {
                    <tr>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.FirstName  @item.LastName
                        </td>
                        <td>
                            @item.Role
                        </td>

                        <td>
                            <div class="text-center">
                                <form asp-action="Delete" asp-route-userId="@item.Id">

                                    @if (item.isApproved == true && item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                    {
                                        <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                            Edit
                                        </a>
                                        //We want to show them the option to lock
                                        <button asp-action="LockUnlock" asp-route-userId="@item.Id" class="btn btn-success text-black"
                                                style="cursor:pointer">
                                            <span>
                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                                Lock
                                            </span>
                                        </button>
                                    }
                                    else if (item.isApproved == true)
                                    {
                                        //We want to show them the option to unlock
                                        <button asp-action="LockUnlock" asp-route-userId="@item.Id" class="btn btn-warning text-black"
                                                style="cursor:pointer">
                                            <span>
                                                <i class="fa fa-unlock" aria-hidden="true"></i>
                                                Unlock
                                            </span>
                                        </button>
                                    }




                                </form>
                            </div>
                        </td>
                    </tr>
                }

            }
        </table>
    }

</div>
<br />



<style>
    .sidebar-container {
        position: absolute;
        width: 250px;
        height: 90%;
        left: 0;
        overflow-x: hidden;
        overflow-y: auto;
        background: #36454F;
        color: #fff;
        top: 57px;
        border-style: solid;
    }

    .content-container {
        padding-top: 20px;
    }

    .sidebar-logo {
        padding: 10px 15px 10px 30px;
        font-size: 20px;
        background-color: #2574A9;
    }

    .sidebar-navigation {
        padding: 0;
        margin: 0;
        list-style-type: none;
        position: relative;
    }

        .sidebar-navigation li {
            background-color: transparent;
            position: relative;
            display: inline-block;
            width: 100%;
            line-height: 20px;
        }

            .sidebar-navigation li a {
                padding: 10px 15px 10px 30px;
                display: block;
                color: #fff;
            }

            .sidebar-navigation li .fa {
                margin-right: 10px;
            }

            .sidebar-navigation li a:active,
            .sidebar-navigation li a:hover,
            .sidebar-navigation li a:focus {
                text-decoration: none;
                outline: none;
            }

            .sidebar-navigation li::before {
                background-color: #2574A9;
                position: absolute;
                content: '';
                height: 100%;
                left: 0;
                top: 0;
                -webkit-transition: width 0.2s ease-in;
                transition: width 0.2s ease-in;
                width: 3px;
                z-index: -1;
            }

            .sidebar-navigation li:hover::before {
                width: 100%;
            }

        .sidebar-navigation .header {
            font-size: 12px;
            text-transform: uppercase;
            background-color: #151515;
            padding: 10px 15px 10px 30px;
        }

            .sidebar-navigation .header::before {
                background-color: transparent;
            }

    .content-container {
        padding-left: 220px;
    }
</style>

